@model malone.Core.Sample.EF.SqlServer.mvc.Models.ListIndexViewModel


@using (Html.BeginForm("Create", "List", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="input-group">
            @Html.EditorFor(model => model.NuevaLista.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Nueva lista" } })
            <div class="input-group-append">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </div>
        <div class="">
            @Html.ValidationMessageFor(model => model.NuevaLista.Name, "", new { @class = "text-danger" })
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
