@model malone.Core.Sample.AN.SqlServer.mvc.Models.TodoListViewModel

@{
    var displayClear = !string.IsNullOrEmpty(Model.Name) ? "block" : "none";
}

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "ListForm", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)

    <div class="form-horizontal animate__animated animate__fadeIn">
        <div class="input-group">
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control default-control", placeholder = "Nombre de lista" } })
            <button id="btnClear" style="display: @displayClear"><i class="far fa-times-circle"></i></button>
            <div class="input-group-append">
                <a href="@Url.Action("Index")" class="btn btn-outline-secondary">Cancelar</a>
                <button id="btnEditList" class="btn btn-primary">
                    Actualizar
                </button>
            </div>
        </div>
        <div class="">@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })</div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
